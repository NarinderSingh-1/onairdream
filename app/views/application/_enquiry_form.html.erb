<div class="fix-form">
  <%= form_tag travel_enquiry_path,{name: "onairdream", id: "onairdream_form", multipart: true} do %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="onairdream-form home-banner-form">
      <h3 style="border-radius: 10px 10px 0px 0px" >Book Domestic &amp; International Flights</h3>
      <div class="col-md-12 select-trip d-flex" style="justify-content: space-around;">
        <p>
          <label class="radio-inline">
            <input id="radio1" type="radio" onclick="show2();" name="trip[trip_type]" checked="" value="Round Trip" style="margin-right: 2px;">Round Trip
          </label>
        </p>
        <p>
          <label class="radio-inline">
            <input id="radio2" type="radio" onclick="show1();" name="trip[trip_type]" value="One Way" style="margin-right: 2px;">One Way
          </label>
        </p>
        <p>
          <label class="radio-inline">
            <input id="radio3" type="radio" onclick="show2();" name="trip[trip_type]" value="Multi City" style="margin-right: 2px;">Multi City
          </label>
        </p>
      </div>

      <div class="col-md-12 d-flex" >
	      <div class="col-md-6 p-1">
	        <div class="form-group">
            <input id="from" name="trip[from]" list="fromCities" class="form-control" placeholder="From*" required="true">
            <datalist id="fromCities">
              <% @source.each do |city| %>
                <option value="<%= city %>">
              <% end  %>
            </datalist>
	          <i class="fa fa-map-marker" aria-hidden="true"></i>
	        </div>
	      </div>
	      <div class="col-md-6 p-1">
	        <div class="form-group">
            <input id="to" name="trip[to]" list="toCities" class="form-control" autocomplete="off" placeholder="To*" type="text" required="true">
            <datalist id="toCities">
              <% @source.each do |city| %>
                <option value="<%= city %>">
              <% end  %>
            </datalist>
	          <i class="fa fa-plane" aria-hidden="true"></i>
	        </div>
	      </div>
      </div>

      <div class="col-md-12 d-flex" >
	      <div class="col-md-6 p-1">
	        <div class="form-group">
            <input type="date" id="departure" name="trip[depart]" placeholder="Departure*" style="padding: 9px 5px;">
	        </div>
	      </div>
	      <div id="div1" class="col-md-6 col-xs-6 p-1">
	        <div class="form-group">
	          <input id="return" name="trip[return]" placeholder="Return*" type="date" style="padding: 9px 5px;">
	        </div>
	      </div>
      </div>

      <div class="col-md-12 d-flex" >
	      <div class="col-md-6 p-1">
	        <div class="form-group">
	          <input id="name" name="trip[name]" placeholder="Name*" type="text" required="true">
	          <i class="fa fa-user" aria-hidden="true"></i>
	        </div>
	      </div>
	      <div class="col-md-6 p-1">
	        <div class="form-group">
	          <input id="mobile" name="trip[mobile]" placeholder="Contact No*" type="tel" class="" required="true">
	          <i class="fa fa-phone" aria-hidden="true"></i>
	        </div>
	      </div>
      </div>

      <div class="col-md-12 col-xs-12 p-1">
        <div class="form-group">
          <input id="email" name="trip[email]" placeholder="Email*" type="email" required="true">
          <i class="fa fa-envelope" aria-hidden="true"></i>
        </div>
      </div>
      <div class="col-md-12 col-xs-12 p-1">
        <div class="form-group mb-0">
          <button class="submit-btn" type="submit" name="Search_Flight">Book Now</button>
        </div>
      </div>

      <div class="security-badge hidden-xs">
        <div class="col-xs-2">
          <img src="<%= asset_path('security-icon.svg') %>" alt="On Air Dream Security">
        </div>
        <div class="col-xs-10">
          <h6>100% SAFE. NO SPAM.</h6>
        </div>
      </div>
    </div>
    <script>
    function show1() {
      document.getElementById('return').disabled = true;
    }

    function show2() {
      document.getElementById('return').disabled = false;
    }
    </script>
  <% end %>
</div>
